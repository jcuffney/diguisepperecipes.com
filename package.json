{
  "name": "diguisepperecipes.com",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "NODE_PATH=src react-scripts start",
    "build": "NODE_PATH=src react-scripts build",
    "test": "NODE_PATH=src react-scripts test",
    "init:hard": "rm -rf package-lock.json node_modules/ && npm i",
    "lint": "NODE_PATH=src eslint src/**/*.js",
    "lint:fix": "NODE_PATH=src eslint --fix src/**/*.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@cuffney/eslint-config": "^1.0.5",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "node-sass": "^4.12.0"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-ga": "^2.5.7",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.0.1",
    "react-select": "^3.0.4",
    "semantic-ui-react": "^0.87.1"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 50,
        "branches": 50,
        "lines": 50,
        "functions": 50
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!node_modules/",
      "!src/registerServiceWorker.js",
      "!src/setupTests.js",
      "!src/index.js"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
